{% extends 'layout.twig' %}

{% block title "Mes articles" %}

{% block body %}
    <div class="container">
        <h1>Bienvenue sur le blog</h1>

        {% for row in posts | batch(4) %}
            <div class="row">
                {% for post in row %}

                    <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
                        <div class="card card-inverse card-info">
                            <div class="card-header">
                                <h4 class="card-title mt-3">
                                    {{ post.name | excerpt20 }}
                                </h4>
                            </div>
                            <div class="card-body">
                                <div class="card-text">
                                    {{ post.content | excerpt | nl2br }}
                                </div>
                                <br>
                                <div class="card-text">
                                    <a href="{{ path('blog.show', {slug: post.slug, id: post.id}) }}" class="btn btn-primary">
                                        Voir l'article
                                    </a>
                                </div>
                            </div>
                            <div class="card-footer">
                                <p class="pull-right text-muted">{{ post.created_at | ago }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {%  endfor %}

        <div class="row">
            <div class="d-block mx-auto">
                {{ paginate(posts, 'blog.index') }}
            </div>
        </div>
    </div>

{% endblock %}
